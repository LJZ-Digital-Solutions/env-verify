{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "app_name": {
            "type": "string",
            "minLength": 1
        },
        "debug": {
            "type": "boolean"
        },
        "port": {
            "type": "integer",
            "minimum": 1,
            "maximum": 65535
        }
    },
    "required": [
        "app_name",
        "debug",
        "port"
    ]
}